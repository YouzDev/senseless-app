<div class="center hero-unit">
  <h1><%= @titre %></h1>
  <div class="row">
    <div class="span6 offset3">
      <p>
	nick: <%= @user.name %><br/>
	email: <%= @user.email %>
      </p>
    </div>
  </div>
</div>
<div class="col-md-8">
  <% if @user.microposts.any? %>
  <h3>Microposts (<%= @user.microposts.count %>)</h3>
  <ol class="microposts">
    <%= render @microposts %>
  </ol>
  <%= will_paginate @microposts %>
  <% end %>
</div>
